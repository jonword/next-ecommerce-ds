// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id  String @id @default(auto())  @db.ObjectId @map("_id")
  name String
  description String
  price Int
  image String
  category String

}